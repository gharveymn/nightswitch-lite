{
    "name": "nightswitch-lite",
    "displayName": "NightSwitch-Lite",
    "description": "Switches between day and night based on location/time specified by the user.",
    "version": "2.1.2",
    "publisher": "gharveymn",
    "author": {
        "name": "Gene Harvey",
        "email": "gharveymn@gmail.com"
    },
    "icon": "icon/icon.png",
    "galleryBanner": {
        "color": "#2d5071",
        "theme": "dark"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/gharveymn/nightswitch-lite"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.toggleTheme",
                "title": "Toggle Day/Night"
            },
            {
                "command": "extension.switchDay",
                "title": "Switch to Day Theme"
            },
            {
                "command": "extension.switchNight",
                "title": "Switch to Night Theme"
            },
            {
                "command": "extension.enableAutoSwitch",
                "title": "Enable Automatic Theme Switching"
            }
        ],
        "configuration": {
            "title": "NightSwitch-lite",
            "properties": {
                "nightswitch.dayTheme": {
                    "type": "string",
                    "default": "Default Light+",
                    "description": "Specifies which theme is to be shown during the day."
                },
                "nightswitch.nightTheme": {
                    "type": "string",
                    "default": "Default Dark+",
                    "description": "Specifies which theme is to be shown during the night."
                },
                "nightswitch.location": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Specifies the user location in decimal degrees. Example input: \"(49.89,-97.14)\"."
                },
                "nightswitch.sunrise": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Manually set the time of sunrise. Accepts 24-Hour format \"HH:MM\" (eg. \"06:30\")."
                },
                "nightswitch.sunset": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Manually set the time of sunset. Accepts 24-Hour format \"HH:MM\" (eg. \"18:30\")."
                },
                "nightswitch.autoSwitch": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically switch the theme to day or night (if VSCode has different theme in middle of day, automatically switches to nightswitch.dayTheme)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "suncalc": "^1.8.0"
    },
    "devDependencies": {
        "@types/node": "^6.0.102",
        "typescript": "^2.7.2",
        "vscode": "^1.1.13"
    },
    "__metadata": null
}
